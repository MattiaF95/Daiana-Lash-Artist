RewriteEngine On

# Forza HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect www â†’ non-www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Rewrite termini (URL pulito)
RewriteRule ^terms-conditions/?$ src/html/terms-conditions.html [L]

# Serve index dalla root
RewriteRule ^$ src/index.html [L]

# 404 personalizzata
ErrorDocument 404 /src/404.html

# Blocca listing directory
Options -Indexes

# Blocco file sensibili
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(bak|old|zip|tar|log|sql|env|config|ini|sh)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Blocco PHP (sito statico)
<FilesMatch "\.(php|php3|php4|php5|phtml)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Compressione GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache browser
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/webp "access plus 6 months"
    ExpiresByType image/jpeg "access plus 6 months"
    ExpiresByType image/png "access plus 6 months"
    ExpiresByType image/svg+xml "access plus 3 months"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Header di sicurezza
<IfModule mod_headers.c>
    # Previeni clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Proteggi da MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Abilita XSS filter
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache immutabile per font
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

